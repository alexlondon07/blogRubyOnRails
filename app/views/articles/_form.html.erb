<%= form_for(@article) do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %> Por favor corrige los errores encontrados:</h2>

  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<!-- Mi formulario de articulos -->
<div class="form-group">
  <label for="">Título</label>
  <%= f.text_field :title, placeholder: "Ingrese título" , class: "form-control" %>
</div>

<div class="form-group">
  <label for="">Cuerpo</label>
  <%= f.text_area :boby, placeholder: "Ingrese cuerpo" , class: "form-control" %>
</div>

<div class="form-group">
  <label for="">Visitas</label>
  <%= f.number_field :visits_count, placeholder: "Ingrese visitas" , class: "form-control" %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
